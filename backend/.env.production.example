# Configuración de Producción
# IMPORTANTE: Cambiar todos los valores antes de desplegar

# Servidor
PORT=3001
NODE_ENV=production

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@host:5432/database
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_PORT=5432

# Seguridad - GENERAR CLAVES ÚNICAS Y SEGURAS
JWT_SECRET=GENERAR_CLAVE_ALEATORIA_MINIMO_64_CARACTERES_AQUI
SESSION_SECRET=GENERAR_OTRA_CLAVE_ALEATORIA_DIFERENTE_AQUI

# Frontend
FRONTEND_URL=https://tu-dominio.com

# Stripe (Pagos)
STRIPE_SECRET_KEY=sk_live_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password
EMAIL_FROM="Emprendedores Unidos <noreply@tudominio.com>"

# Storage (AWS S3 o similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=emprendedores-uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logs
LOG_LEVEL=error
LOG_FILE=./logs/app.log

# Redis (opcional, para sessions)
REDIS_URL=redis://localhost:6379

# Monitoreo (opcional)
SENTRY_DSN=

# CORS Origins (separados por comas)
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com
