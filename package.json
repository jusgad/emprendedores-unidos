{
  "name": "emprendedores-unidos",
  "version": "1.0.0",
  "description": "Plataforma para emprendedores unidos - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run build && npm run preview",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "clean": "npm run clean:backend && npm run clean:frontend && rm -rf node_modules",
    "clean:backend": "cd backend && rm -rf node_modules",
    "clean:frontend": "cd frontend && npm run clean",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "setup": "./install.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "emprendedores",
    "react",
    "express",
    "fullstack"
  ],
  "author": "",
  "license": "ISC"
}